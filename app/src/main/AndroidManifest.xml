<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.metclue.app">

    <application
        android:name=".utils.AppManager"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MetClue">
        <activity android:name=".dashboard.CompleteYourProfile"></activity>
        <activity android:name=".dashboard.DashboardActivity" />
        <activity
            android:name=".auth.SignupActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".auth.OTPActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".auth.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".onboarding_screens.activity.OnboardingActivity" />
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>