<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".onboarding_screens.activity.OnboardingActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPagerTutorial" />

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp"
        app:dotsElevation="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        android:id="@+id/dotsIndicator"
        android:layout_gravity="center_horizontal"
        app:dotsSize="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        app:dotsColor="#D1D1D1"
        app:dotsSpacing="@dimen/_minus5sdp"
        app:selectedDotColor="#0994B8"/>


    <TextView
        android:id="@+id/tvNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/raleway_medium"
        android:textSize="@dimen/_12sdp"/>



</RelativeLayout>